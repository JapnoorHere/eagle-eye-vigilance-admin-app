<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#EFEDF4"
            android:layout_margin="7dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <View
                    android:id="@+id/upline"
                    android:layout_marginTop="10dp"
                    android:layout_width="107dp"
                    android:layout_height="2dp"
                    android:background="@drawable/purpleback"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="15dp"
                        >
                        <TextView
                            android:id="@+id/time"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23:23 PM"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="15dp"
                        android:gravity="end"
                        >
                        <TextView
                            android:textSize="10sp"
                            android:id="@+id/Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="January 5/203223"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject : " />
                    <TextView
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Society"
                        android:id="@+id/tvAgainst"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start">
                    <TextView
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:id="@+id/tvSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="qwertysdrhgf lekrjhfwlkejrflwejrfhegfkljef lcuefdyegfcjefioygfuegbfrgeiorgfcowhorgficuepcguwhc"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Demand No : "
                        android:textSize="9sp"/>
                    <TextView
                        android:id="@+id/compNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123456789"
                        android:textColor="@color/black"
                        android:textSize="10sp"/>
                </LinearLayout>
                <View
                    android:id="@+id/downline"
                    android:layout_marginBottom="10dp"
                    android:layout_width="107dp"
                    android:layout_height="2dp"
                    android:background="@drawable/purpleback"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="kjdhj"
          android:drawablePadding="5dp"
          android:layout_marginStart="7dp"
          android:id="@+id/userName"
          android:textColor="@color/black"
          android:drawableStart="@drawable/ic_baseline_person_24"
          />

    </LinearLayout>
</layout>