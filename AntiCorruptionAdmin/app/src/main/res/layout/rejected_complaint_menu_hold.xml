<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialobg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View
        android:layout_width="130dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#ababab" />


    <androidx.cardview.widget.CardView
        android:id="@+id/accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/accepted"
        app:cardCornerRadius="15dp">
        <TextView
            android:padding="15dp"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_baseline_download_done_24"
            android:layout_height="wrap_content"
            android:text="   Accepted"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/resolve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/resolved"
        app:cardCornerRadius="15dp">
        <TextView
            android:padding="15dp"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_baseline_done_outline_24"
            android:layout_height="wrap_content"
            android:text="   Resolved"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/userProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#859FF3"
        app:cardCornerRadius="15dp">
        <TextView
            android:padding="15dp"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:layout_height="wrap_content"
            android:text="   User Profile"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#859FF3"
        app:cardCornerRadius="15dp">
        <TextView
            android:padding="15dp"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_baseline_chat_24"
            android:layout_height="wrap_content"
            android:text="   Chat"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/blockUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#859FF3"
        app:cardCornerRadius="15dp">
        <TextView
            android:padding="15dp"
            android:id="@+id/blocktext"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_baseline_block_24"
            android:layout_height="wrap_content"
            android:text="   Block this User"
            />
    </androidx.cardview.widget.CardView>




</LinearLayout>
</layout>