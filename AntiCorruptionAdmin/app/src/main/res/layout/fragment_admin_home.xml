<?xml version="1.0" encoding="utf-8"?>
<layout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".HomeFragment">


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Complaints"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:id="@+id/cardTotal"
                app:cardBackgroundColor="#896FFF"
                app:cardCornerRadius="10dp"

                android:layout_margin="5dp">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_bar_chart_24"
                    app:tint="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="23dp"
                    android:layout_marginRight="30dp"
                    android:paddingStart="10dp"
                    />

                <TextView
                    android:id="@+id/tvNo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="1"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:text="\n Pending"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:paddingTop="20dp"

                    android:paddingBottom="20dp"
                    android:textSize="20dp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_margin="5dp"
                android:id="@+id/cardResolved"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/resolved"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_done_all_24"
                    app:tint="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="23dp"
                    android:layout_marginRight="30dp"
                    android:paddingStart="10dp"
                    />

                <TextView
                    android:id="@+id/tvNo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="1"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:text="\nResolved"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:paddingTop="20dp"

                    android:paddingBottom="20dp"
                    android:textSize="20dp"
                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#FF9800"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/cardAccepted"
                > <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_file_download_done_24"
                app:tint="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="23dp"
                android:layout_marginRight="30dp"
                android:paddingStart="10dp"
                />


                <TextView
                    android:id="@+id/tvNo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="1"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:text="\nAccepted"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="20dp"
                    /></androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/rejected"
                android:layout_width="150dp"
                android:layout_margin="5dp"
                android:id="@+id/cardRejected"
                app:cardCornerRadius="10dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_cancel_24"
                    app:tint="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="23dp"
                    android:layout_marginRight="30dp"
                    android:paddingStart="10dp"
                    />

                <TextView
                    android:id="@+id/tvNo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="1"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:text="\nRejected"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:paddingTop="20dp"

                    android:paddingBottom="20dp"
                    android:textSize="20dp"
                    /></androidx.cardview.widget.CardView>



        </LinearLayout>



<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="RECENT NOTIFICATION : "
    android:textColor="@color/black"
    android:textStyle="bold"
    android:padding="10dp"
    android:visibility="gone"
    android:id="@+id/recentnotfi"
    android:layout_marginTop="10dp"
    />


        <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:id="@+id/cardnotifi"
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:visibility="gone"
            app:cardBackgroundColor="#CCDAFF"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_marginEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name : "
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123445678"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                    <TextView
                        android:layout_marginStart="20dp"
                        android:id="@+id/compnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Complaint Number : "
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/notificomplaintNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123445678"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:id="@+id/underLine"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <LinearLayout
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:layout_marginStart="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Message : "
                            android:textColor="#8C8989"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/msg"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Society"
                            android:textColor="@color/black"
                            android:textSize="17sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:layout_marginStart="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Against : "
                            android:id="@+id/aga"
                            android:textColor="#8C8989"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/notificompAgainst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Society"
                            android:textColor="@color/black"
                            android:textSize="17sp" />


                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/notifitime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21:12"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="end"
                    android:textColor="@color/black" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="RECENT COMPLAINT : "
    android:textColor="@color/black"
    android:textStyle="bold"
    android:padding="10dp"
    android:visibility="gone"
    android:id="@+id/recent"
    android:layout_marginTop="10dp"
    />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/compLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="#EFEDF4"
                android:layout_margin="7dp"

                app:cardCornerRadius="15dp">

                <View
                    android:id="@+id/leftline"
                    android:layout_width="4dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/purpleback1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Complaint Number : "
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                        <TextView
                            android:id="@+id/complaintNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123445678"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">
                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="January 26,2023"
                            android:textSize="12sp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/black" />
                        <View
                            android:id="@+id/rightline"
                            android:layout_width="110dp"
                            android:layout_height="2dp"
                            android:background="@drawable/purpleback"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start"
                            android:layout_marginStart="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Against : "
                                android:textColor="#777373"
                                android:textSize="14sp" />
                            <TextView
                                android:id="@+id/compAgainst"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Society"
                                android:textColor="@color/black"
                                android:textSize="17sp" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="District : "
                                android:textColor="#777373"
                                android:textSize="15sp" />
                            <TextView
                                android:id="@+id/tvDistrict"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Society"
                                android:textColor="@color/black"
                                android:textSize="17sp" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="14dp"
                            >
                            <TextView
                                android:layout_marginStart="6dp"
                                android:id="@+id/compdetails"
                                android:maxLines="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#777373"/>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21:12"
                        android:layout_gravity="center"
                        android:textColor="@color/black" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>
    </ScrollView>
</layout>